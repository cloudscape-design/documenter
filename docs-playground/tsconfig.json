{
  "compilerOptions": {
    "lib": ["es5", "es2015", "dom"],
    "types": ["vite/client", "node"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "declaration": true,
    "jsx": "react",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["vite.config.*", "src/**/*", "src/**/*.tsx"]
}
